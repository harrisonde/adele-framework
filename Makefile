test\:all:
	@go clean -testcache
	make test:cache test:cli test:database test:filesystem test:helpers test:httpservertest:logger test:middleware test:mailer test:middleware test:mux test:session test:render test:rpcserver
test\:cache:
	@go test ./cache/...
test\:cli:
	@go test ./cli/adele/...
test\:database:
	@go test ./database/...
test\:filesystem:
	@go test ./filesystem/...
test\:helpers:
	@go test ./helpers
test\:httpserver:
	@go test ./httpserver
test\:logger:
	@go test ./logger
test\:middleware:
	@go test ./middleware
test\:mailer:
	@go test ./mailer
test\:mux:
	@go test ./mux
test\:session:
	@go test ./session
test\:render:
	@go test ./render
test\:rpcserver:
	@go test ./rpcserver
## coverage: displays test coverage
test\:coverage:
	@go test -cover ./...
test\:coverage\:browser:
	@go test -coverprofile=coverage.out ./... && go tool cover -html=coverage.out

